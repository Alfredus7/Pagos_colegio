@model IEnumerable<Pagos_colegio_web.Models.Estudiante>

@{
    ViewData["Title"] = "Lista de Estudiantes";
    bool esAdmin = User.IsInRole("Admin");
}

<h1>@ViewData["Title"]</h1>

@if (esAdmin)
{
    <p>
        <a class="btn btn-primary" asp-action="Create">Crear Nuevo Estudiante</a>
    </p>
}

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.NombreCompleto)</th>
            @if (esAdmin)
            {
                <th>@Html.DisplayNameFor(model => model.Familia)</th>
            }
            <th>@Html.DisplayNameFor(model => model.FechaInscripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Descuento)</th>
            <th>@Html.DisplayNameFor(model => model.Tarifa)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NombreCompleto)</td>

                @if (esAdmin)
                {
                    <td>@Html.DisplayFor(modelItem => item.Familia.NombreUsuario)</td>
                }

                <td>@item.FechaInscripcion.ToString("dd/MM/yyyy")</td>
                <td>@((item.Descuento / 100.0m).ToString("P0"))</td>
                <td>@item.Tarifa?.Gestion</td>

                <td>
                    @if (esAdmin)
                    {
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@item.EstudianteId">Editar</a>
                        <a class="btn btn-sm btn-outline-info" asp-action="Details" asp-route-id="@item.EstudianteId">Detalles</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.EstudianteId">Eliminar</a>
                    }

                    <a class="btn btn-sm btn-outline-success" asp-controller="Reportes" asp-action="HistorialPagos" asp-route-id="@item.EstudianteId">Historial</a>
                </td>
            </tr>
        }
    </tbody>
</table>
