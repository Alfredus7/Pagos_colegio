@{
    ViewData["Title"] = "Home Page";
}

<!-- Seudo Header -->
<div class="container-fluid bg-white py-2">
    <div class="container">
        <div class="d-flex flex-column flex-md-row align-items-center justify-content-start gap-3">
            <img class="logo-img" src="https://www.feyalegria.org/bolivia/wp-content/uploads/sites/28/2023/01/fya-isotipo-color-web-2021.svg" alt="Logo" style="height: 60px;">
            <div class="logo-text text-start">
                <strong class="d-block">UNIDAD EDUCATIVA</strong>
                <span class="text-danger fw-bold fs-5 d-block">SANTA MARÍA FE Y ALEGRÍA</span>
            </div>
        </div>
    </div>
</div>


<!-- Hero Section -->
<section class="hero position-relative text-white d-flex align-items-center" style="height: 100vh; overflow: hidden;">

    <!-- Imagen de fondo semitransparente -->
    <div class="position-absolute top-0 start-0 w-100 h-100 bg-image" style="
        background-image: url('https://d3pugrm67vf9n7.cloudfront.net/wp-content/uploads/sites/28/2023/02/09101116/FOTOS-NI%C3%91OS-FYA.jpg');
        background-size: cover;
        background-position: center;
        opacity: 0.4;
        z-index: 0;">
    </div>

    <!-- Overlay opcional oscuro para más contraste -->
    <div class="position-absolute top-0 start-0 w-100 h-100"
         style="background: linear-gradient(to right, rgba(0,0,0,0.6), rgba(0,0,0,0.3)); z-index: 1;">
    </div>

    <!-- Hero Content -->
    <div class="container position-relative z-2">
        <div class="row justify-content-center text-center">
            <div class="col-lg-10 col-md-12">
                <h1 class="display-4 fw-bold mb-3 text-shadow">
                    EDUCACIÓN QUE <span class="text-warning fw-bold" style="font-size: inherit;">TRANSFORMA</span> VIDAS
                </h1>


                <p class="lead mb-4 text-shadow">
                    Fe y Alegría en Bolivia trabaja en Educación Regular promoviendo la formación integral holística de calidad de niños, niñas, adolescentes y jóvenes en los nueve departamentos de Bolivia.
                </p>
                <div class="d-flex flex-column flex-md-row justify-content-center gap-3">
                    <a href="#" class="btn btn-danger btn-lg rounded-pill px-4">Conoce Nuestros Programas</a>
                    <a href="#" class="btn btn-outline-light btn-lg rounded-pill px-4">Contáctanos</a>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Custom CSS -->
<style>
    .text-shadow {
        text-shadow: 2px 2px 6px rgba(0, 0, 0, 0.5);
    }

    .logo-text {
        font-size: 1rem;
        line-height: 1.3;
    }
    .hero p {
        font-size: 1.1rem;
    }

    .logo-text {
        text-align: center;
    }
</style>
