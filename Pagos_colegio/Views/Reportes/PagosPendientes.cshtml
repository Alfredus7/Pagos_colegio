@model List<(Pagos_colegio_web.Models.Estudiante estudiante, Pagos_colegio_web.Models.Tarifa tarifa)>


@{
    ViewData["Title"] = "Pagos Pendientes";
}

<h2>@ViewData["Title"]</h2>

@if (!Model.Any())
{
    <p>No hay pagos pendientes. ¡Todo está al día!</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Estudiante</th>
                <th>Periodo</th>
                <th>Monto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.estudiante.NombreCompleto</td>
                    <td>@item.tarifa.Periodo</td>
                    <td>@item.tarifa.Monto.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
