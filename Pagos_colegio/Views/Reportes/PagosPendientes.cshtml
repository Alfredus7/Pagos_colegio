@model List<(Pagos_colegio_web.Models.Estudiante estudiante, string periodo, decimal monto)>


@{
    ViewData["Title"] = "Pagos Pendientes";
}

<div class="container py-4">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-success">No hay pagos pendientes. ¡Todo está al día!</div>
    }
    else
    {
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Estudiante</th>
                    <th>Periodo</th>
                    <th>Monto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.estudiante.NombreCompleto</td>
                        <td>@item.periodo</td>
                        <td>@item.monto.ToString("C")</td>
                    </tr>
                }

            </tbody>
        </table>
    }
</div>
