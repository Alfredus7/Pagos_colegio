@model Pagos_colegio_web.Models.ReporteViewModel

<div class="container py-4">
    <h2 class="mb-3">Historial de Pagos</h2>
    @if (Model.Historial.Any())
    {
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Estudiante</th>
                    <th>Fecha</th>
                    <th>Periodo</th>
                    <th>Monto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Historial)
                {
                    <tr>
                        <td>@p.Estudiante</td>
                        <td>@p.Fecha.ToShortDateString()</td>
                        <td>@p.Periodo</td>
                        <td>@p.Monto.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No hay pagos registrados.</div>
    }

    <h2 class="mt-5 mb-3">Pagos del Mes</h2>
    @if (Model.PagosDelMes.Any())
    {
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Estudiante</th>
                    <th>Fecha</th>
                    <th>Periodo</th>
                    <th>Monto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.PagosDelMes)
                {
                    <tr>
                        <td>@p.Estudiante</td>
                        <td>@p.Fecha.ToShortDateString()</td>
                        <td>@p.Periodo</td>
                        <td>@p.Monto.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No hay pagos registrados este mes.</div>
    }

    <h2 class="mt-5 mb-3">Deudas</h2>
    @if (Model.Deuda.Any())
    {
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Estudiante</th>
                    <th>Periodo</th>
                    <th>Monto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Deuda)
                {
                    <tr>
                        <td>@item.estudiante.NombreCompleto</td>
                        <td>@item.tarifa.Periodo</td>
                        <td>@item.tarifa.Monto.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-success">No hay deudas pendientes.</div>
    }
</div>