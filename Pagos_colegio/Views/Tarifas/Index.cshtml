@model IEnumerable<Pagos_colegio_web.Models.Tarifa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Gestion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Gestion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
                <td>
                    @{
                        var hoy = DateTime.Today;
                    }

                    @if (item.FechaInicio <= hoy && item.FechaFin >= hoy)
                    {
                        <span class="badge bg-success">Tarifa actual</span>
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.FechaFin)
                    }

                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Monto)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TarifaId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TarifaId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TarifaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
